[
	{
		"id": "projects-task-filter",
		"name": "Project Tasks",
		"enabled": true,
		"stopOnMatch": true,
		"filter": {
			"type": "group",
			"operator": "all",
			"children": [
				{
					"type": "condition",
					"property": "file.name",
					"comparator": "matchesRegex",
					"value": "/\\d{4}-\\d{2}-\\d{2}/"
				},
				{
					"type": "condition",
					"property": "file.folder",
					"comparator": "contains",
					"value": "project",
					"caseSensitive": false
				},
				{
					"type": "group",
					"operator": "any",
					"children": [
						{
							"type": "condition",
							"property": "file.name",
							"comparator": "matchesRegex",
							"value": "/\\d{4}-\\d{2}-\\d{2}/"
						},
						{
							"type": "condition",
							"property": "file.folder",
							"comparator": "contains",
							"value": "project",
							"caseSensitive": false
						}
					]
				},
				{
					"type": "group",
					"operator": "all",
					"children": [
						{
							"type": "condition",
							"property": "file.name",
							"comparator": "matchesRegex",
							"value": "/\\d{4}-\\d{2}-\\d{2}/"
						},
						{
							"type": "condition",
							"property": "file.folder",
							"comparator": "contains",
							"value": "project",
							"caseSensitive": false
						}
					]
				}
			]
		},
		"actions": [
			{
				"type": "move",
				"targetFolder": "Projects/To Do",
				"createFolderIfMissing": true
			},
			{
				"type": "applyTemplate",
				"templatePath": "_templates/task.md",
				"mode": "prepend"
			},
			{
				"type": "rename",
				"prefix": "hello - "
			}
		]
	}
]
